{
  "version": "3.7.2",
  "study": {
    "name": "sim_name", // the simulation name defines the database name as well as local storage paths.
    "description": "",  // (optional) a description the simulation
    "start_datetime": "2020-11-03 0:0:0", // defines when a simulation starts
    // can also be defined in two other ways, either as a datetime range [dt_1, dt_2],
    // or a list of start times [dt_1, dt_2, ..., dt_n]

    // if defined as a range, then a list of start times will be generated by evenly dividing the duration defined by the number of generations

    // if defined as a list, and the list is shorter than the number of generations, then the list will be repeated until the list is equal to the number of generations.
    // if defined as a list, and the list is longer than the number of generations, then the list will be truncated to be equal to the number of generations.

    "start_datetime_sequence": "sequential", // the start times can be sequencial as defined above, or shuffled.
    "timezone": "America/Vancouver",
    "time_step_size": 60,
    "days": 30,
    "generations": 100,
    "profiles_db_location": "", //database string to where the profiles are located, i.e.: 
    //postgresql://pg_un:pg_pw@server_addr/db_name
    "output_db_location": "", //db string to where sim results should be stored, i.e.:
    //postgresql://pg_un:pg_pw@server_addr
    "sim_root": ""  //location on hard drive where files such as TF weights need to be stored
  },

  // training defines special parameters for certain generations.
  // currently used for some experimental agents to "warm up" at the beginning
  "training": {
    "hyperparameters": {
      // hyperparameters to search should be iterables with length > 1
      // these are starting values
      // curriculum "0" will be updated with hyperparameters to be searched at run time
      "parameter_1": {"start": 0.1, "stop": 0.01, "num": 3}, //example of setting hyperparameters using numpy keywords
      "parameter_2": [[64,64], [128,128],[256, 256]] //example of setting hyperparameters directly using a list
    },
    "curriculum": {
      "0": {
        "set_parameter": true //example of setting hyperparameter directly
      },
      "2": {
        "set_parameter": false, //example of setting hyperparameter directly
        "anneal": { //example of annealing hyperparameter
          "anneal_parameter": [0.95,"multiply", 0.05]
          }
        }
      }
    },

  // parameters for the socketio server
  "server": {
    "host": "",
    "port": "3100"
  },

  // parameters for market
  "market": {
    "id": "",
    "type": "MicroTE",
    "close_steps": 2,
    "grid": {
      "price": 0.069,
      "fee_ratio": 1.1,
      // (optional) time of use schedule can be defined in the following way
      // first set of keys are the months
      // second set of keys are the hours for mid-peak and peak
      // assume that TOU is only applicable on weekdays
      // weekends will default to base rate defined above
      // base rate defined above is also the off-peak rate
      "tou": {
               "5,6,7,8,9,10": {
                 "7,8,9,10,17,18": 0.144,
                 "11,12,13,14,15,16": 0.208
               },
               "1,2,3,4,11,12": {
                 "11,12,13,14,15,16": 0.144,
                 "7,8,9,10,17,18": 0.208
               }
             }
    }
  },
  "participants": { // each participant must be defined in the following format
    "R4": { // the participant name must exist in the profile DB defined above
      "type": "Residential",
      "trader": {
        "track_metrics": true,
        "type": "sma_crossover",  // type must exist in the _agent/trader folder
        "bid_price": 0.08,  // (optional) default bid price.
        "ask_price": 0.12,  // (optional) default ask price
        "learning": true    
      },
      "load": {
        "scale": 1  // multiply the load data from the profile database to be used in simulation
      },
      "generation": {
        "scale": 1 // multiply the generation data from the profile database to be used in simulation
      },
      "storage": {  // (optional) Defines the storage system to be attached to a participant
        "type": "Bess", // storage type, must exist in devices
        "capacity": 27000,  // Usable capacity defined in Wh
        "power": 10000, // constant charge/discharge rate defined in W
        "efficiency": 0.95, // one way efficiency. round-trip efficiency is efficiency^2
        "monthly_sdr": 0.05 // monthly self-discharge rate as a fraction of usable capacity
      }
    }
  }
}
